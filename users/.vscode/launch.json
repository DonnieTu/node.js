    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}/user-server.js",
            "env":{
                "DEBUG":"users:*",
                "PORT":"33333", 
                "SEQUELIZE_CONNECT":"sequelize-sqlite.yaml"
                },
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Test users-add",
            "program": "${workspaceRoot}/users-add.js",
            "env":{
                "DEBUG":"users:*",
                "PORT":"33333"
                },
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Test user service",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args":["--no-timeouts"],
            "env":{
                "HOST_USERS_TEST":"localhost",
                "PORT":"33333"
                },
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 5858
        }
    ]
}