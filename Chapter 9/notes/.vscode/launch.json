    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${file}"
        },

        {
            "type": "node",
            "request": "launch",
            "name": "test Program",
            "cwd":"${workspaceRoot}",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args":["${workspaceRoot}/test/test-model.js","--no-timeouts"],
            "env":{
                "SEQUELIZE_CONNECT":"${workspaceRoot}/models/sequelize-sqlite.yaml",
                "MODEL_TO_TEST":"${workspaceRoot}/models/notes-sequelize"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "test sqlite3 Program",
            "cwd":"${workspaceRoot}",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args":["${workspaceRoot}/test/test-model.js","--no-timeouts"],
            "env":{
                "MODEL_TO_TEST":"${workspaceRoot}/models/notes-sqlite3",
                "SQLITE_FILE":"test.sqlite3"
            }
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "address": "localhost",
            "port": 5858
        }
    ]
}